<assembly>
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/apache-tomcat-${tomcat.version}</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>**/webapps/docs/**</exclude>
                <exclude>**/webapps/examples/**</exclude>
                <exclude>**/webapps/host-manager/**</exclude>
                <exclude>**/webapps/manager/**</exclude>
            </excludes>
        </fileSet>           
        <fileSet>
            <directory>src/main/assembly/hsqldb-2.2.5</directory>
            <outputDirectory></outputDirectory>            
        </fileSet>            
    </fileSets>
    
    <files>
        <file>
            <source>src/main/assembly/integral-mystic/classes/config-test.properties</source>
            <outputDirectory>webapps/integral-mystic/WEB-INF/classes</outputDirectory>    
            <destName>config-test.properties</destName>
            <fileMode>0644</fileMode>          
        </file>
        <file>
            <source>src/main/assembly/integral-mystic/classes/env.properties</source>
            <outputDirectory>webapps/integral-mystic/WEB-INF/classes</outputDirectory>
            <destName>env.properties</destName>
            <fileMode>0644</fileMode>              
        </file>
        <file>
            <source>src/main/assembly/integral-mystic/classes/log4j.properties</source>
            <outputDirectory>webapps/integral-mystic/WEB-INF/classes</outputDirectory>
            <destName>log4j.properties</destName>
            <fileMode>0644</fileMode>              
        </file>
        <file>
            <source>src/main/assembly/assemblyStarter.bat</source>
            <outputDirectory></outputDirectory>    
            <destName>assemblyStarter.bat</destName>
            <fileMode>0644</fileMode>          
        </file>
        <file>
            <source>src/main/assembly/assemblyStarter.sh</source>
            <outputDirectory></outputDirectory>    
            <destName>assemblyStarter.sh</destName>
            <fileMode>0644</fileMode>          
        </file>
        <file>
            <source>src/main/assembly/readMe.txt</source>
            <outputDirectory></outputDirectory>    
            <destName>readMe.txt</destName>
            <fileMode>0644</fileMode>          
        </file>
    </files>
    
    <dependencySets>
        <dependencySet>
            <outputDirectory>/webapps/integral-solr</outputDirectory>
            <includes>
                <include>${project.groupId}:integral-solr</include>
            </includes>
            <unpack>true</unpack>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/webapps/integral-mystic</outputDirectory>
            <includes>
                <include>${project.groupId}:integral-mystic-web</include>
            </includes>
            <unpack>true</unpack>
        </dependencySet>
        
    </dependencySets>    
</assembly>

